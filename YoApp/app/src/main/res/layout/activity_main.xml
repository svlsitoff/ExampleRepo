<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:rowCount="5"
    android:columnCount="3">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:id="@+id/inputUnit"
        android:layout_width="99dp"

        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:backgroundTint="@android:color/holo_red_light"
        android:textCursorDrawable="@null"
        android:textColor="#ff0004"

        android:ems="8"
        android:inputType="number"
        android:singleLine="false" />
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbfirst"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_row="1"
        android:layout_column="1"
        android:text="" />

        <TextView
            android:id="@+id/first"
            android:layout_column = "2"
            android:layout_row="1"
            android:text="" />

    <TextView
        android:id="@+id/lbsecond"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_row="2"
        android:layout_column="1"
        android:text="" />
        <TextView
            android:id="@+id/second"
            android:layout_column = "2"
            android:layout_row="2"
            android:text="" />

    <TextView
        android:id="@+id/lbthird"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_row="3"
        android:layout_column="1"
        android:text="" />
        <TextView
            android:id="@+id/third"
            android:layout_column = "2"
            android:layout_row="3" />

    <ImageButton
        android:id="@+id/ButtonLength"
        android:layout_width="126dp"
        android:layout_height="117dp"
        android:layout_row="4"
        android:layout_column="0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/measure_tape" />

    <ImageButton
        android:id="@+id/ButtonWeight"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_row="4"
        android:layout_column="1"
        app:srcCompat="@drawable/weight" />

    <ImageButton
        android:id="@+id/ButtonTemperature"
        android:layout_width="109dp"
        android:layout_height="113dp"
        android:layout_row="4"
        android:layout_column="2"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/temper" />


</GridLayout>
